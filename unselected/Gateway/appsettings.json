{
  "Jwt": {
    "Issuer": "UserService",
    "Audience": "api",
    "Key": "your_super_secret_key_here_123!"
  },
  "ReverseProxy": {
    "Routes": {
      "users-route": {
        "ClusterId": "user-service",
        "Match": { "Path": "/users/{**catch-all}" }
      },
      "chat-route": {
        "ClusterId": "chat-service",
        "Match": { "Path": "/chat/{**catch-all}" }
      },
      "ws-route": {
        "ClusterId": "chat-service",
        "Match": { "Path": "/ws/{**catch-all}" }
      }
    },
    "Clusters": {
      "user-service": {
        "Destinations": {
          "d1": { "Address": "http://userservice:8080" }
        }
      },
      "chat-service": {
        "Destinations": {
          "d1": { "Address": "http://chatservice:8080" }
        }
      }
    }
  }
}